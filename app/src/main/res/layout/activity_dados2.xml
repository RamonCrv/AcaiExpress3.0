<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo2app"
    tools:context=".ui.main.Dados2">
    <Button
    android:id="@+id/btSalvar"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="128dp"
    android:background="@drawable/btn1"
    android:text="Salvar e Atualizar"
    android:textAllCaps="false"
    android:textColor="#66f9B0"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.975" />

    <TextView
        android:id="@+id/editNponto"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Nome do seu local"
        android:inputType="textPersonName"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="430dp"
        android:layout_height="240dp"
        android:layout_marginStart="141dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="340dp"
        android:background="@drawable/caixatext"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNponto"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/codAvaView"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:background="@drawable/texts"
        android:hint="Em breve"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btSalvar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.766" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo De Avaliação"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/codAvaView"
        app:layout_constraintEnd_toEndOf="@+id/codAvaView"
        app:layout_constraintStart_toStartOf="@+id/codAvaView"
        app:layout_constraintTop_toBottomOf="@+id/txtMedAv" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informe esse codigo ao seus clientes para que eles possam avaliar seu ponto de venda no aplicativo."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btSalvar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codAvaView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtMedAv"
        android:layout_width="131dp"
        android:layout_height="49dp"
        android:layout_marginBottom="92dp"
        android:drawableLeft="@drawable/star"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/codAvaView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/texts"
        android:drawableLeft="@drawable/ic_action_edite"
        android:text="Configuração"
        app:layout_constraintBottom_toTopOf="@+id/txtMedAv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>